<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg">


    <Button
        android:id="@+id/spielbeitreten"
        android:layout_width="270dp"
        android:layout_height="68dp"
        android:layout_above="@+id/anleitung"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="41dp"
        android:layout_toEndOf="@+id/unotemplate"
        android:layout_toRightOf="@+id/unotemplate"
        android:layout_x="430dp"
        android:layout_y="131dp"
        android:background="@drawable/spielbeitreten" />

    <Button
        android:id="@+id/anleitung"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/exitbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/exitbutton"
        android:layout_marginBottom="101dp"
        android:layout_x="430dp"
        android:layout_y="206dp"
        android:background="@drawable/anleitungbutton" />

    <Button
        android:id="@+id/exitbutton"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/unotemplate"
        android:layout_toRightOf="@+id/unotemplate"
        android:layout_x="430dp"
        android:layout_y="283dp"
        android:background="@drawable/exitbutton" />



    <ImageView
        android:id="@+id/unotemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unotemplate" />
</RelativeLayout>