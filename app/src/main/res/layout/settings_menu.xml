<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@drawable/duel" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/hotspot" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/spin" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="65dp"
        android:layout_height="71dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="209dp"
        android:layout_marginRight="209dp"
        app:srcCompat="@android:drawable/ic_menu_directions" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="205dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:text="@string/hotDropCard"
        android:textColor="@color/UserWhite" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="202dp"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:text="@string/cardSpinCard"
        android:textColor="@color/UserWhite" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="172dp"
        android:layout_height="92dp"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignTop="@+id/imageView3"
        android:text="@string/tradeCardFeature"
        android:textColor="@color/UserWhite" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="204dp"
        android:layout_height="76dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/imageView3"
        android:text="@string/duelCard"
        android:textColor="@color/UserWhite" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="241dp"
        android:layout_height="93dp"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignTop="@+id/textView3"
        android:text="@string/dropCardCheat"
        android:textColor="@color/UserWhite" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="242dp"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignTop="@+id/textView4"
        android:text="@string/blamePlayer"
        android:textColor="@color/UserWhite" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="424dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:text="@string/counterPossibility"
        android:textColor="@color/UserWhite" />

</RelativeLayout>