<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg">


    <Button
        android:id="@+id/spielerstellen"
        android:layout_width="192dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/spielerstellenbutton" />

    <Button
        android:id="@+id/spielbeitreten"
        android:layout_width="270dp"
        android:layout_height="74dp"
        android:layout_alignLeft="@+id/spielerstellen"
        android:layout_alignStart="@+id/spielerstellen"
        android:layout_below="@+id/spielerstellen"
        android:background="@drawable/spielbeitreten" />

    <Button
        android:id="@+id/anleitung"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spielbeitreten"
        android:background="@drawable/anleitungbutton" />

    <Button
        android:id="@+id/exitbutton"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/anleitung"
        android:background="@drawable/exitbutton" />


    <ImageView
        android:id="@+id/unotemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/unotemplate" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="192dp"
        android:layout_height="356dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="400dp"
        android:layout_marginTop="3dp" />

</RelativeLayout>